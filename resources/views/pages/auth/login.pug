extends ../../layout/app.pug

block title
    | Welcome to Task:Tracker

block styles
    link(rel="stylesheet", href=mix("css/global/app.css"))

block content
    .container
        .columns.is-vcentered
            .column.is-5
                login(ref="loginComponent", login-url=route('auth.attempt'), home-page-url=route('home.index'))
            .column.is-6.is-offset-1.has-text-centered
                h1.title.is-2
                    | Welcome
                h2.subtitle.is-4
                    | Please login to your account

block scripts
    script(defer, src=mix('js/pages/auth/login/index.js'))
