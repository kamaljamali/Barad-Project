extends ../../layout/app.pug

block title
    | آیتم های حوزه فعالیت

block content
    .container
        zone-indexs(
            list-url=route('api.all.zoneindex', { page: '$page$', size: '$pageSize$' }),
            department-categories-url=route('api.departmentcategory', { page: 1, size: 1000 }),
            zone-cats-url=route('api.zonecat', { page: 1, size: 1000 }),
            register-url=route('zoneindex.store'),
            edit-url=route('zoneindex.update', { id :'$id$'}),
            load-url=route("api.zoneindex.show", { department: '$department$'}),
            departments-url=route('departmentcategories.department', { department_category: '$department_category$'})
        )

block scripts
    script(defer, src=mix('js/pages/zone-index/index/index.js'))


