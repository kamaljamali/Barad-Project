extends ../../layout/app.pug

block title
    | کاربران

block content
    .container
        users(list-url=route('api.user', { page: '$page$', size: '$pageSize$' }),
            departments-url=route('api.department', { page: 1, size: 1000 }),
            roles-url=route('api.role', { page: 1, size: 1000 }),
            register-url=route('user.store'),
            edit-url=route('user.update', { id :'$id$'})
            get-image-url=route('api.getimage', { image :'$IMAGE$'})
        )

block scripts
    script(defer, src=mix('js/pages/user/index/index.js'))


